<odoo>
  <data>
    <!-- explicit list view definition -->
 
    <record model="ir.ui.view" id="peng.list">
      <field name="name">peng list</field>
      <field name="model">peng.peng</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </list>
      </field>
    </record>
 

    <!-- actions opening views on models -->
 
    <record model="ir.actions.act_window" id="peng.action_window">
      <field name="name">peng window</field>
      <field name="res_model">peng.peng</field>
      <field name="view_mode">list,form</field>
    </record>
 

    <!-- server action to the one above -->
 
    <record model="ir.actions.server" id="peng.action_server">
      <field name="name">peng server</field>
      <field name="model_id" ref="model_peng_peng"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "list,form",
          "res_model": model._name,
        }
      </field>
    </record>
 

    <!-- Top menu item -->
 
    <menuitem name="peng" id="peng.menu_root"/>
 
    <!-- menu categories -->
 
    <menuitem name="Menu 1" id="peng.menu_1" parent="peng.menu_root"/>
    <menuitem name="Menu 2" id="peng.menu_2" parent="peng.menu_root"/>
 
    <!-- actions -->

    <menuitem name="List" id="peng.menu_1_list" parent="peng.menu_1"
              action="peng.action_window"/>


    <menuitem name="Server to list" id="peng" parent="peng.menu_2"
              action="peng.action_server"/>

  </data>
</odoo>
